{
  "root": true,
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "globals": {
    "hre": false,
    "task": false
  },
  "rules": {
    "prettier/prettier": ["error"]
  },
  "ignorePatterns": ["coverage/*", "artifacts/*", "cache/*"]
}
